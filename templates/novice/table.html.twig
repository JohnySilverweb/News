{% extends 'base.html.twig' %}
{% block body_class %}table_page{% endblock %}
{% block body %}

<div class="title">
    <h1>News Table</h1><h1>Latest news</h1>
</div>
<table border="1">
    <tr>
        <th>Title</th>
        <th>Featured</th>
        <th>Category</th>
        <th>Valid From</th>
        <th>Valid Till</th>
        <th></th>
        <th></th>
    </tr>
    
    {% for novice in novice %}
    <tr {% if not novice.isPublished() %} style="background-color: rgba(133, 99, 7, 0.6)" {% endif %}> 
        <td >{{ novice.name }}</td>    
        <td>{{ novice.featured ? 'Yes' : 'No' }}</td>   
        <td>{{ novice.category }}</td>   
        <td>{{ novice.validFrom|date('d.m.Y') }}</td>   
        <td>{{ novice.validTill|date('d.m.Y') }}</td>
        <td>
            <button><a href="{{ path('novice_edit', {'id': novice.id}) }}">Edit</a></button>
        </td>
        <td>
            <button><a href="{{ path('novice_delete', {'id': novice.id}) }}">Delete</a></button>
        </td>
        <td>
            <button><a href="{{ path('novice_duplicate', {'id': novice.id}) }}">Duplicate</a></button>
        </td>
    </tr>
    {% endfor %}
</table>
<hr>
<div class="buttons">
    <button><a href="{{ path('novice_cards') }}">Cards</a></button>
    <button><a href="{{ path('novice_index') }}">Add news</a></button>
    <button><a href="{{ path('novice_search') }}">Search news</a></button>
</div>
{% endblock %}